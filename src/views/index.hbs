
<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+123456789" autocomplete="off">
            </div>
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message" autofocus>
            </div>
        <button class="btn btn-primary btn-block">Send</button>
        </form>
    </div>
    <div class="col-md-8" >
            {{#if messages}}
                <ul class="list-group" style="height: 70vh; overflow-y:auto;" id="messages">
                    {{#each messages}}
                        <li class="list-group-item list-group-item-info list-group-item-action" >
                            <div class="row">
                            <div class="col-md-6"><span>Para: {{ To}}</span></div>
                        

                            <div class="col-md-6"><span>{{timeago createdAt}}</span></div>
                            </div>
                            <p>{{Body}}</p>
                            {{!-- hideNumber funcion para ocultar numero --}}
                            <span>{{_id}}</span>
                            <span>{{ From}}</span>
                        </li>
                    {{/each}}
                </ul>
            {{else}} 
                <p>No messages yet</p>
            {{/if}}
    </div>
</div>

